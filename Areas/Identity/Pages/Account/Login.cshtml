@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sessão";
}

<div class="page">
    <div class="row justify-content-center align-items-center d-flex flex-row">
        <div class="col-md-6 col-md-6 col-lg-6">
            <section>
                <form id="account" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3 form-group">
                        <label class="form-label" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="form-label text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label class="form-label" asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="form-label text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <div class="checkbox">
                            <label class="form-label" asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">Iniciar Sessão</button>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-4 col-md-offset-2 justify-content-center align-items-center d-flex flex-row">
            <div class="">
                <h1>Ainda não tem uma conta?</h1>
                <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Registar</a>

            </div>
        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
