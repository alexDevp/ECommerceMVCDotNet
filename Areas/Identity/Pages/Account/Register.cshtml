@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="page">
    <div class="row  justify-content-center align-items-center d-flex flex-row">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1>@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3 form-group">
                    <label class="form-label" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="form-label text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label class="form-label" asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="form-label text-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label class="form-label" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class=" form-labeltext-danger"></span>
                </div>
                <div class="mb-3 form-group">
                    <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="form-label text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Registar</button>
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
