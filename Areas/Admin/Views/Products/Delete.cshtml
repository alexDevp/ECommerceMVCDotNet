@model DAW_MP2.Models.Product

@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page justify-content-center align-items-center flex-row">
    <div>
        <h1>Tem a certeza que deseja apagar este produto?</h1>
        <hr />
    </div>
    <div class="row">

        <div class="col-md-8">

            <div class="row">

                <div class="form-group mb-3 col-6">
                    <hr />
                    @Html.DisplayNameFor(model => model.Id)
                    <hr />
                    @Html.DisplayFor(model => model.Id)
                </div>

                <div class="form-group mb-3 col-6">
                    <hr />
                    @Html.DisplayNameFor(model => model.ProductName)
                    <hr />
                    @Html.DisplayFor(model => model.ProductName)
                </div>

            </div>

            <div class="row">

                <div class="col-4">

                    <div class="form-group mb-3">
                        <hr />
                        @Html.DisplayNameFor(model => model.Stock)
                        <hr />
                        @Html.DisplayFor(model => model.Stock)
                    </div>

                </div>

                <div class="col-4">

                    <div class="form-group mb-3">
                        <hr />
                        @Html.DisplayNameFor(model => model.Price)
                        <hr />
                        @Html.DisplayFor(model => model.Price)
                    </div>

                </div>

                <div class="col-4">

                    <div class="form-group mb-3">
                        <hr />
                        @Html.DisplayNameFor(model => model.Category)
                        <hr />
                        @Html.DisplayFor(model => model.Category)
                    </div>

                </div>

            </div>

            <div class="row">

                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-desc-tab" data-bs-toggle="tab" data-bs-target="#nav-desc" type="button" role="tab" aria-controls="nav-home" aria-selected="true">@Html.DisplayNameFor(model => model.Description)</button>
                        <button class="nav-link" id="nav-esp-tab" data-bs-toggle="tab" data-bs-target="#nav-esp" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">@Html.DisplayNameFor(model => model.Specifications)</button>
                    </div>
                </nav>

                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-desc" role="tabpanel" aria-labelledby="nav-desc-tab">@Html.DisplayFor(model => model.Description)</div>
                    <div class="tab-pane fade" id="nav-esp" role="tabpanel" aria-labelledby="nav-esp-tab">@Html.DisplayFor(model => model.Specifications)</div>
                </div>

            </div>

        </div>

        <div class="col-md-4">

            <div class="form-group mb-3">
                <hr />
                @Html.DisplayNameFor(model => model.Image)
                <img class="pic img-responsive img-center" src="@Html.DisplayFor(model => model.Image)" />
                @Html.DisplayFor(model => model.Image)
                <hr />
            </div>

        </div>

    </div>
    <form asp-action="Delete">
        <div class="form-group mb-3">
            <input type="hidden" asp-for="Id" class="form-control" />
            <a class="btn btn-dark" asp-action="Index">Voltar</a>
            <input type="submit" value="Apagar" class="btn btn-danger" />
        </div>
    </form>
</div>
